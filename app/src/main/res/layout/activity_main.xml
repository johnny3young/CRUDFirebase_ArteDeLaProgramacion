<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".MainActivity">


    <android.support.design.widget.TextInputLayout
            android:hint="Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <EditText
                android:id="@+id/textView_Nombre_Persona"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


    </android.support.design.widget.TextInputLayout><android.support.design.widget.TextInputLayout
        android:hint="Apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <EditText
            android:id="@+id/textView_Apellido_Persona"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</android.support.design.widget.TextInputLayout><android.support.design.widget.TextInputLayout
        android:hint="Correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <EditText
            android:id="@+id/textView_Correo_Persona"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</android.support.design.widget.TextInputLayout><android.support.design.widget.TextInputLayout
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <EditText
            android:id="@+id/textView_Password_Persona"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</android.support.design.widget.TextInputLayout>


    <TextView
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:text="Lista de Personas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ListView
            android:id="@+id/listView_Datos_Personas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

</LinearLayout>